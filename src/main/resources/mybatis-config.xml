<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!-- camelCase 매핑 활성화 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <!-- 타입 별칭 설정 -->
    <typeAliases>
        <typeAlias type="com.project.animal.dto.chat.ChatRoomDTO" alias="chatRoom"/>
        <typeAlias type="com.project.animal.dto.chat.ChatRoomDetailDTO" alias="chatRoomDetail"/>
        <typeAlias type="com.project.animal.dto.board.BoardListResponseDTO" alias="BoardListResponseDTO"/>
    </typeAliases>

</configuration>
